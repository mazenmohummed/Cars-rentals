generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// =====================
// USER
// =====================

model User {
  id      String @id @default(cuid()) @map("_id")
  clerkId String @unique

  firstName String?
  lastName  String?
  email     String  @unique
  telephone String?

  role UserRole @default(CUSTOMER)

  reservations Reservation[]
  reviews      Review[] // relation to reviews

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UserRole {
  CUSTOMER
  ADMIN
  STAFF
}

// =====================
// CITY
// =====================

model City {
  id   String @id @default(cuid()) @map("_id")
  name String @unique

  image       String
  description String

  transFee Float @default(0)

  pickupReservations Reservation[] @relation("PickupCity")
  returnReservations Reservation[] @relation("ReturnCity")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// =====================
// CAR (UPDATED ✅)
// =====================

model Car {
  id String @id @default(cuid()) @map("_id")

  name String
  type String

  seats   Int?
  gearbox Boolean? // true = automatic, false = manual
  bags    Int?
  doors   Int?

  mainImage String // ✅ car images (URLs)
  images    String[]

  reservations Reservation[]
  availability CarUnavailability[]
  mileagePlans MileagePlan[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive  Boolean  @default(true)
}

// =====================
// MILEAGE PLAN
// =====================

enum MileageType {
  LIMITED
  UNLIMITED
}

model MileagePlan {
  id String @id @default(cuid()) @map("_id")

  type         MileageType
  pricePerDay  Float
  kmPerDay     Float?
  extraKmPrice Float?

  carId String
  car   Car    @relation(fields: [carId], references: [id], onDelete: Cascade)

  reservations Reservation[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([carId, type])
}

// =====================
// EXTRA SERVICES
// =====================

model ExtraService {
  id          String  @id @default(cuid()) @map("_id")
  name        String
  price       Float
  description String?

  isActive Boolean @default(true)

  reservations ReservationService[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// =====================
// RESERVATION
// =====================

model Reservation {
  id String @id @default(cuid()) @map("_id")

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Restrict)

  carId String
  car   Car    @relation(fields: [carId], references: [id], onDelete: Restrict)

  pickupCityId String
  pickupCity   City   @relation("PickupCity", fields: [pickupCityId], references: [id], onDelete: Restrict)

  returnCityId String
  returnCity   City   @relation("ReturnCity", fields: [returnCityId], references: [id], onDelete: Restrict)

  mileagePlanId String
  mileagePlan   MileagePlan @relation(fields: [mileagePlanId], references: [id], onDelete: Restrict)

  startDate       DateTime
  endDate         DateTime
  rentalDays      Int
  reservationDate DateTime @default(now())

  totalPrice   Float
  address      Address
  flightNumber String?

  startOdometer Int?
  endOdometer   Int?

  extraKmUsed  Int?
  extraKmTotal Int?

  services ReservationService[]
  payment  Payment?

  status ReservationStatus @default(PENDING)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

type Address {
  street String
  status String
  city   String
  zip    String?
}

enum ReservationStatus {
  PENDING
  CONFIRMED
  PICKED_UP
  RETURNED
  CANCELLED
}

// =====================
// RESERVATION ↔ SERVICE
// =====================

model ReservationService {
  id String @id @default(cuid()) @map("_id")

  reservationId String
  reservation   Reservation @relation(fields: [reservationId], references: [id], onDelete: Cascade)

  serviceId String
  service   ExtraService @relation(fields: [serviceId], references: [id], onDelete: Restrict)

  quantity   Int   @default(1)
  unitPrice  Float
  totalPrice Float
}

// =====================
// PAYMENT
// =====================

enum PaymentMethod {
  CASH
  CARD
  ONLINE
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

model Payment {
  id String @id @default(cuid()) @map("_id")

  reservationId String      @unique
  reservation   Reservation @relation(fields: [reservationId], references: [id], onDelete: Cascade)

  amount Float
  method PaymentMethod
  status PaymentStatus

  transactionRef String?
  paidAt         DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// =====================
// CAR UNAVAILABILITY
// =====================

model CarUnavailability {
  id String @id @default(cuid()) @map("_id")

  carId String
  car   Car    @relation(fields: [carId], references: [id], onDelete: Cascade)

  startDate DateTime
  endDate   DateTime

  reason String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([carId])
}

// =====================
// REVIEW
// =====================

model Review {
  id String @id @default(cuid()) @map("_id")

  // Relation to User
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Snapshot user data
  avatar    String?
  firstName String?
  lastName  String?

  stars       Int // 1 → 5
  description String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Homepage {
  id           String   @id @default(cuid()) @map("_id")
  logo         String
  title1       String
  description1 String?
  title2       String
  description2 String?
  title3       String
  description3 String?
  mainImg      String
  visionImg    String[]
  vision       String
  visionText   String
  updatedAt    DateTime @updatedAt
}
