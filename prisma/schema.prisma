generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// =====================
// ACCOUNT / SESSION / TOKEN
// =====================

model Account {
  id                String  @id @default(cuid()) @map("_id")
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid()) @map("_id")
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id         String   @id @default(cuid()) @map("_id")
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// =====================
// USER
// =====================

model User {
  id        String @id @default(cuid()) @map("_id")
  firstName String
  lastName  String
  email     String @unique
  telephone String
  password  String

  role UserRole @default(CUSTOMER)

  reservations Reservation[]
  accounts     Account[]
  sessions     Session[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UserRole {
  CUSTOMER
  ADMIN
  STAFF
}

// =====================
// CITY
// =====================

model City {
  id   String @id @default(cuid()) @map("_id")
  name String @unique

  image       String
  description String

  pickupReservations Reservation[] @relation("PickupCity")
  returnReservations Reservation[] @relation("ReturnCity")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// =====================
// CAR (UPDATED ✅)
// =====================

model Car {
  id String @id @default(cuid()) @map("_id")

  name String
  type String

  seats   Int?
  gearbox Boolean? // true = automatic, false = manual
  bags    Int?
  doors   Int?

  reservations Reservation[]
  availability CarAvailability[]
  mileagePlans MileagePlan[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive  Boolean  @default(true)
}

// =====================
// MILEAGE PLAN
// =====================

enum MileageType {
  LIMITED
  UNLIMITED
}

model MileagePlan {
  id String @id @default(cuid()) @map("_id")

  type         MileageType
  pricePerDay  Int
  kmPerDay     Int?
  extraKmPrice Int?

  carId String
  car   Car    @relation(fields: [carId], references: [id], onDelete: Cascade)

  reservations Reservation[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([carId, type])
}

// =====================
// EXTRA SERVICES
// =====================

model ExtraService {
  id    String @id @default(cuid()) @map("_id")
  name  String
  price Int

  isActive Boolean @default(true)

  reservations ReservationService[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// =====================
// RESERVATION
// =====================

model Reservation {
  id String @id @default(cuid()) @map("_id")

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Restrict)

  carId String
  car   Car    @relation(fields: [carId], references: [id], onDelete: Restrict)

  pickupCityId String
  pickupCity   City   @relation("PickupCity", fields: [pickupCityId], references: [id], onDelete: Restrict)

  returnCityId String
  returnCity   City   @relation("ReturnCity", fields: [returnCityId], references: [id], onDelete: Restrict)

  mileagePlanId String
  mileagePlan   MileagePlan @relation(fields: [mileagePlanId], references: [id], onDelete: Restrict)

  startDate       DateTime
  endDate         DateTime
  rentalDays      Int
  reservationDate DateTime @default(now())

  totalPrice   Int
  address      Address
  flightNumber String?

  startOdometer Int?
  endOdometer   Int?

  extraKmUsed  Int?
  extraKmTotal Int?

  services ReservationService[]
  payment  Payment?

  status ReservationStatus @default(PENDING)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

type Address {
  street String
  status String
  city   String
  zip    String?
}

enum ReservationStatus {
  PENDING
  CONFIRMED
  PICKED_UP
  RETURNED
  CANCELLED
}

// =====================
// RESERVATION ↔ SERVICE
// =====================

model ReservationService {
  id String @id @default(cuid()) @map("_id")

  reservationId String
  reservation   Reservation @relation(fields: [reservationId], references: [id], onDelete: Cascade)

  serviceId String
  service   ExtraService @relation(fields: [serviceId], references: [id], onDelete: Restrict)

  quantity   Int @default(1)
  unitPrice  Int
  totalPrice Int
}

// =====================
// PAYMENT
// =====================

enum PaymentMethod {
  CASH
  CARD
  ONLINE
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

model Payment {
  id String @id @default(cuid()) @map("_id")

  reservationId String      @unique
  reservation   Reservation @relation(fields: [reservationId], references: [id], onDelete: Cascade)

  amount Int
  method PaymentMethod
  status PaymentStatus

  transactionRef String?
  paidAt         DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// =====================
// CAR AVAILABILITY
// =====================

model CarAvailability {
  id String @id @default(cuid()) @map("_id")

  carId String
  car   Car    @relation(fields: [carId], references: [id], onDelete: Cascade)

  startDate DateTime
  endDate   DateTime

  reason   String?
  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
